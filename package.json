{
  "name": "oro-html-pdf",
  "version": "2.1.4",
  "description": "Generate PDF through headless Chromium using Handlebars & HTML template.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "coverage:open": "node coverage.open.js",
    "coverage-open": "jest --coverage && node coverage.open.js",
    "lint": "eslint .",
    "prettier": "prettier --write .",
    "clean": "rm -R ./dist",
    "clean:all": "rm -R ./dist ./node_modules ./coverage",
    "build": "tsup ./src/index.ts",
    "watch": "nodemon"
  },
  "keywords": [
    "pdf",
    "html",
    "handlebars",
    "promise",
    "async/await",
    "typescript"
  ],
  "author": "Carlos Oropesa <carlos@oropensando.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oropesa/oro-html-pdf.git"
  },
  "bugs": {
    "url": "https://github.com/oropesa/oro-html-pdf/issues"
  },
  "homepage": "https://github.com/oropesa/oro-html-pdf#readme",
  "dependencies": {
    "axios": "^1.8.2",
    "fs-extra": "^11.3.0",
    "handlebars": "^4.7.8",
    "oro-functions": "^2.4.3",
    "puppeteer": "^23.10.4"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.26.0",
    "@eslint/js": "^9.22.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "babel-jest": "^29.7.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-unicorn": "^57.0.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "oro-timer": "^2.2.4",
    "pdf.js-extract": "^0.2.1",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0"
  }
}
