{
  "name": "oro-html-pdf",
  "version": "2.0.0",
  "description": "Generate PDF through headless Chromium using Handlebars & HTML template.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "test": "jest",
    "lint": "eslint .",
    "clean": "rm -R ./dist",
    "clean:all": "rm -R ./dist ./node_modules",
    "build": "tsup ./src/index.ts --format cjs,esm --dts --clean"
  },
  "keywords": [
    "pdf",
    "html",
    "handlebars",
    "promise",
    "async/await",
    "typescript"
  ],
  "author": "Carlos Oropesa <carlos@oropensando.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oropesa/oro-html-pdf.git"
  },
  "bugs": {
    "url": "https://github.com/oropesa/oro-html-pdf/issues"
  },
  "homepage": "https://github.com/oropesa/oro-html-pdf#readme",
  "dependencies": {
    "axios": "^1.6.0",
    "fs-extra": "^11.1.1",
    "handlebars": "^4.7.8",
    "oro-functions": "^2.0.1",
    "puppeteer": "^21.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-typescript": "^7.23.2",
    "@types/fs-extra": "^11.0.3",
    "@types/jest": "^29.5.7",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "babel-jest": "^29.7.0",
    "eslint": "^8.52.0",
    "eslint-config-alloy": "^5.1.2",
    "eslint-plugin-unicorn": "^49.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "oro-timer": "^2.0.4",
    "pdf.js-extract": "^0.2.1",
    "prettier": "^3.0.3",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  }
}
